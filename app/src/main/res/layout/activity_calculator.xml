<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/resultHistory"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:shadowColor="@color/black"
        android:gravity="right|bottom"
        android:text=""
        android:textColor="@color/gray"
        android:textSize="35dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        />

    <TextView
        android:id="@+id/result1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:shadowColor="@color/black"
        android:gravity="right|bottom"
        android:text="NULL"
        android:textSize="40dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:layout_margin="3dp"
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C"
            android:textSize="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/button_bg"
            />

        <Button
            android:layout_margin="3dp"
            android:id="@+id/delFunc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="DEL"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/button_bg"

            />

        <Button
            android:layout_margin="3dp"
            android:id="@+id/chu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/"
            android:textSize="20dp"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/button_bg"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:layout_margin="3dp"
            android:id="@+id/num7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@drawable/button_bg"

            />

        <Button
            android:layout_margin="3dp"
            android:id="@+id/num8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@drawable/button_bg"

            />

        <Button
            android:layout_margin="3dp"
            android:id="@+id/num9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@drawable/button_bg"

            />

        <Button
            android:layout_margin="3dp"
            android:id="@+id/x"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@drawable/button_bg"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="4"
            android:textSize="20dp"
            android:background="@drawable/button_bg"
            />

        <Button
            android:id="@+id/num5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="5"
            android:textSize="20dp"
            android:background="@drawable/button_bg"
            />

        <Button
            android:layout_margin="3dp"
            android:id="@+id/num6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@drawable/button_bg"
            />

        <Button
            android:id="@+id/jian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="-"
            android:textSize="20dp"
            android:background="@drawable/button_bg"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num1"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@drawable/button_bg"
            />

        <Button
            android:layout_margin="3dp"
            android:id="@+id/num2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="20dp"
            android:layout_weight="2"
            android:background="@drawable/button_bg"
            android:gravity="center"
            />

        <Button
            android:layout_margin="3dp"
            android:id="@+id/num3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="20dp"
            android:layout_weight="2"
            android:background="@drawable/button_bg"
            android:gravity="center"
            />

        <Button
            android:layout_margin="3dp"
            android:id="@+id/add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+"
            android:textSize="20dp"
            android:layout_weight="2"
            android:background="@drawable/button_bg"
            android:gravity="center"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <Button
            android:layout_margin="3dp"
            android:id="@+id/num0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:background="@drawable/button_bg"
            />

        <Button
            android:id="@+id/dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:gravity="center"
            android:text="."
            android:textSize="20dp" />

        <Button
            android:layout_margin="3dp"
            android:id="@+id/calRes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="="
            android:textSize="20dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg"
            android:gravity="center"
            />


    </LinearLayout>

</LinearLayout>